@model PortalAcademico.Models.Curso

@{
    ViewData["Title"] = "Desactivar Curso";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">¿Estás seguro de que quieres desactivar este curso?</h3>
<div>
    <h4>Curso: @Model.Nombre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Código</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Codigo)</dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>
    </dl>
    
    <form asp-action="Deactivate">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Desactivar" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>